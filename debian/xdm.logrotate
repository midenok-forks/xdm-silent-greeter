# $Id: xdm.logrotate 189 2005-06-11 00:04:27Z branden $

/var/log/xdm.log {
    weekly
    rotate 52
    compress
    delaycompress
    notifempty
    missingok
    postrotate
        if [ -r /var/run/xdm.pid ]; then \
            kill -s USR2 $(cat /var/run/xdm.pid); \
        fi
    endscript
}

